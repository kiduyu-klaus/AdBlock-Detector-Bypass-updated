{
  "name": "AdBlock Detector Bypass",
  "version": "3.0",
  "description": "Removes obtrusive adblock-detection popups and advanced anti-adblock protections.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "assets/abdb.logo.16.png",
    "48": "assets/abdb.logo.48.png",
    "128": "assets/abdb.logo.128.png"
  },
  "action": {
    "default_icon": "assets/abdb.logo.16.png",
    "default_title": "Bypass AdBlock Detector"
  }
}